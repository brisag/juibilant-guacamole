<h1>All Plots</h1>
<% @plots.each do |plot| %>
<hr>
<section id="plot-<%=plot.id %>">

  <h2>Plot Number: <%= plot.number %></h2>


  <h2>Plots Plants:</h2> <% plot.plants.each do |plant| %>
                      <section id="plant-<%= plant.id %>">
                        <h2><%= plant.name %><%= button_to "Remove #{plant.name}", plot_plant_path(plot, plant), method: :delete %>

                        </section>
  <% end %>
    </section>
<% end %>
